extends ../layout
block content
    div.container
        div.row
            div.col-xs-12.col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-4
                h1.text-center.title #{title}
                div.content-wall
                    if message
                        span.text-center.text-danger #{message}
                    form.form-signup(action='/signup', method='POST')
                        div.form-group
                            input(type='text', name='username', class='form-control', placeholder='Username',required, autofocus)
                        div.form-group
                            input(type='password', name='password', class='form-control nomargin', placeholder='Password', required)
                        div.form-group
                            input(type='email', name='email', class='form-control', placeholder='Email',required)
                        div.form-group
                            input(type='text', name='firstName', class='form-control', placeholder='First Name',required)
                        div.form-group
                            input(type='text', name='lastName', class='form-control', placeholder='Last Name',required)
                        div.form-group
                            button(class='btn btn-success btn-block', type='submit') Register
                        span.clearfix
                    div
                        a.text-center(href='/') Back to login