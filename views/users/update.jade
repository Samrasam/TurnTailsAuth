extends ../layout

block content
   div.container
      div.row
         div.col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
            h1.text-center.title Change credentials of #{user.username}
            div.content-wall
               form(action='/users#{user._id}/update', method='post', name='updateUser')
                  label(for='updateUsername') Username:
                  input#updateUsername.form-control(type='String', value='#{user.username}', name='username')
                  label(for='oldPw') Password:
                  input#oldPw.form-control(type='String', placeholder='Old password', name='oldPw' )
                  input#oldPw.form-control(type='String', placeholder='New password', name='newPw' )
                  input#oldPw.form-control(type='String', placeholder='New password check', name='newPwCheck' )
               div.row
                  a.btn.btn-primary(href='/profile') Abandon
                  a.btn.btn-primary(href='', style='float: right') Update Credentials