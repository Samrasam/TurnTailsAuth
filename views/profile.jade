extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                #user
                    h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
                        div.profile-wall
                            ul.user-details
                                li Username: #{user.username}
                                li Email: #{user.email}
                                li First Name: #{user.firstName}
                                li Last Name: #{user.lastName}
                        div.avatar-wall
                            table.avatar-details
                                tr
                                    td(class='fa fa-arrow-left')
                                    td {avatar.head}
                                    td(class='fa fa-arrow-right')
                                tr
                                    td(class='fa fa-arrow-left')
                                    td {avatar.body}
                                    td(class='fa fa-arrow-right')
                                tr
                                    i.fa.fa-arrow-left
                                    td {avatar.tail}
                                    i.fa.fa-arrow-right

                        a(href='/logout', class='text-center') Logout