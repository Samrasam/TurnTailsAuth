extends layout

block content
   div.container
      div.row
         div.col-xs-12.col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-4
            h1.text-center.title Forgot password
            div.content-wall
               if message
                  span.text-center.text-danger #{message}
               form.form-group(method='post')
                  div.form-group
                     input(type='text', name='email', class='form-control', placeholder='Email',required, autofocus)
                  div.form-group
                     button(class='btn btn-primary btn-block', type='submit') Reset Password
               div
                  a.text-center(href='/') Back to login